{
  "env": {
    "DISABLE_PROMPT_CACHING_SONNET": "1",
    "DISABLE_PROMPT_CACHING_HAIKU": "1",
    "DISABLE_PROMPT_CACHING_OPUS": "1"
  },
  "permissions": {

    "deny": [
      "Read(README.md)",
      "Read(./scripts/**)",
      "Read(./mise.toml)",
      "WebSearch",
      "WebFetch",
      "Bash(aoc:*)"
    ],
    "allow": [
      "Bash(./scripts/*)",
      "Bash(./scripts/check-answer.sh:*)",
      "Bash(./scripts/read-puzzle.sh:*)",
      "Bash(./scripts/download-input.sh:*)",
      "SlashCommand(/solve-day:*)",
      "SlashCommand(/prep-day:*)",
      "SlashCommand(/solve-part:*)",
      "SlashCommand(/review-part:*)"
    ]
  }
}
